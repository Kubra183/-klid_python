import math

# 1. Noktaların Tanımlanması
points = [(1, 2), (4, 6), (7, 8), (2, 5), (9, 10)]  # 2D uzayda noktaları içeren bir liste

# 2. Öklid Mesafesi İçin Bir Fonksiyon Yazma
def euclideanDistance(point1, point2):
    return math.sqrt((point2[0] - point1[0]) ** 2 + (point2[1] - point1[1]) ** 2)

# 3. Mesafelerin Hesaplanması
distances = []
for i in range(len(points)):
    for j in range(i + 1, len(points)):  # Her nokta çifti için mesafeyi hesaplıyoruz
        distance = euclideanDistance(points[i], points[j])
        distances.append(distance)

# 4. Minimum Mesafenin Bulunması
min_distance = min(distances)

print("Hesaplanan mesafeler:", distances)
print("Minimum mesafe:", min_distance)
